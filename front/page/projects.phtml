<script type="text/javascript">
	function comet() {
		$.ajax({
			type : 'GET',
			url  : 'read',
			data: {code : "<?php echo $code; ?>"},
			async : true,
			cache : false,
			success : function(data) {
						var json = eval("("+data+")");
						$(".msg-box").html(json['msg']);
						setTimeout('comet()', 1000);
			},
			error : function(XMLHttpRequest, textstatus, error) { 
						alert(error);
						setTimeout('comet()', 15000);
			}		
		});
	}
	$(function() {
		comet();
	});
	jQuery(function($) {
		$(".send").on("click", function() {
			var msg ="<?php echo $user['username'].': ';?>"+$(this).parent().children("textarea").val()+"<br/>";
			$.ajax({
				type: "POST",
				url: "messages",
				data: {code : "<?php echo $code; ?>", message : $(this).parent().children("textarea").val()}
			});
			$.ajax({
				type : 'GET',
				url  : 'write',
				data: {msg: msg, code : "<?php echo $code; ?>"},
				async : true,
				cache : false
			});
			$(this).parent().children("textarea").val("");
		});
	});

	jQuery(function($) {
		$(".submit").on("click", function(e) {
			e.preventDefault();
			var error = false;
			$(".error").hide();
			if ($("input[type='file']")[0].files.length == 0) {
				$(".image").show();
				error = true;
				// alert('hey');
			}
			if (!error) {
				var fd = new FormData();
				fd.append("image",$(this).parent().find("input[type='file']")[0].files[0]);
				$(".success").show();
				$(".picture-inner").hide();
				$(this).replaceWith($(this).val("").clone(true));
				$.ajax({
					type: "POST",
					url: "portfolio",
					data: fd,
		            processData: false,
		            contentType: false
				});
			}
		});
		$("input[type='file']").on("change", function() {
			$(".success").hide();
			if ($(this)[0].files[0].type.search(/jpeg|png|gif/) == -1) {
				$(".invalid-image").show();		
				$(this).replaceWith($(this).val("").clone(true));
				$(".picture-inner").hide();
			}
			else {
				var reader = new FileReader();
	            reader.onload = function (e) {
	                $(".picture-inner").attr("src", e.target.result).css("display","inline");
	            };
	            reader.readAsDataURL($(this)[0].files[0]);
				$(".invalid-image").hide();		
			}
		});
	});
</script>
